<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.opal.controller.EntryController">
   <!-- TOP: Navigation Bar -->
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="1200.0" style="-fx-padding: 0 25; -fx-background-color: #F8F8F8; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
         <children>
            <!-- Profile Section -->
            <HBox alignment="CENTER_LEFT" onMouseClicked="#openProfileDialog" spacing="15.0" style="-fx-cursor: hand;">
               <children>
                  <Button fx:id="userProfileBtn" mnemonicParsing="false" style="-fx-background-color: #2D2D2D; -fx-text-fill: white; -fx-background-radius: 50; -fx-min-width: 45; -fx-min-height: 45; -fx-font-size: 18;" text="ðŸ‘¤" />
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label fx:id="usernameLabel" style="-fx-font-weight: bold; -fx-font-size: 16;" text="Username" />
                        <Label style="-fx-text-fill: #888888; -fx-font-size: 12;" text="Entries" />
                     </children>
                  </VBox>
               </children>
            </HBox>

            <!-- Spacer -->
            <HBox HBox.hgrow="ALWAYS" />

            <!-- Navigation Buttons -->
            <Button fx:id="homeBtn" mnemonicParsing="false" onAction="#onNavigateHome" style="-fx-background-color: transparent; -fx-text-fill: #2D2D2D; -fx-font-size: 20; -fx-cursor: hand;" text="ðŸ  Home" />
            <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logout" style="-fx-background-color: transparent; -fx-text-fill: #2D2D2D; -fx-font-size: 20; -fx-cursor: hand;" text="Logout ðŸšª" />
         </children>
      </HBox>
   </top>

   <!-- CENTER: Main Content (2-Column Layout) -->
   <center>
      <SplitPane dividerPositions="0.7" prefHeight="720.0" prefWidth="1200.0">
         <!-- LEFT COLUMN: Entry Content (70%) -->
         <VBox prefHeight="720.0" prefWidth="840.0" spacing="10.0" style="-fx-padding: 20;">
            <!-- Project Title Header -->
            <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="15.0" style="-fx-background-color: #F8F8F8; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0; -fx-padding: 0 10;">
               <children>
                  <Label fx:id="projectTitle" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Project Name" />
                  <HBox HBox.hgrow="ALWAYS" />
                  <Button fx:id="importBtn" mnemonicParsing="false" onAction="#onImport" text="Import" />
                  <Button fx:id="exportBtn" mnemonicParsing="false" onAction="#onExport" text="Export" />
               </children>
            </HBox>

            <!-- Entry Title -->
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Title" />
                  <TextField fx:id="entryTitleField" prefHeight="35.0" promptText="Entry title" />
               </children>
            </VBox>

            <!-- Entry Content -->
            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Content" />
                  <TextArea fx:id="entryContent" prefHeight="400.0" wrapText="true" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10.0" style="-fx-background-color: #F8F8F8; -fx-border-color: #E0E0E0; -fx-border-width: 1 0 0 0; -fx-padding: 10;">
               <children>
                  <Button fx:id="saveEntryBtn" mnemonicParsing="false" onAction="#onSaveEntry" text="Save Entry" />
                  <Button fx:id="createEntryBtn" mnemonicParsing="false" onAction="#onCreateEntry" text="Create Entry" />
                  <Button fx:id="deleteEntryBtn" mnemonicParsing="false" onAction="#onDeleteEntry" text="Delete Entry" />
                  <HBox HBox.hgrow="ALWAYS" />
                  <Button fx:id="projectRootRedirBtn" mnemonicParsing="false" onAction="#onNavigateToRoot" text="ðŸ“ Root" />
                  <Button fx:id="entryParentRedirBtn" mnemonicParsing="false" onAction="#onNavigateToParent" text="â¬†ï¸ Parent" />
                  <Button fx:id="subDirBtn" mnemonicParsing="false" onAction="#onShowSubDirectories" text="ðŸ“‚ Children" />
               </children>
            </HBox>
         </VBox>

         <!-- RIGHT COLUMN: Permissions & Comments (30%) -->
         <VBox prefHeight="720.0" prefWidth="360.0" spacing="0.0" style="-fx-border-color: #E0E0E0; -fx-border-width: 1 0 0 0;">
            <!-- SECTION 1: PERMISSIONS -->
            <VBox spacing="10.0" style="-fx-padding: 15; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Permissions" />
                  
                  <!-- Users with Permissions List -->
                  <ListView fx:id="usersPermissionsList" prefHeight="150.0" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </ListView>

                  <!-- Add Permission Controls -->
                  <Separator />
                  <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Grant Permission" />
                  
                  <VBox spacing="5.0">
                     <children>
                        <TextField fx:id="usernameField" promptText="Username" />
                        <ComboBox fx:id="permissionComboBox" prefWidth="330.0" />
                        <Button fx:id="addPermissionBtn" mnemonicParsing="false" onAction="#onAddPermission" style="-fx-padding: 8;" text="Add Permission" />
                     </children>
                  </VBox>
               </children>
            </VBox>

            <!-- SECTION 2: COMMENTS -->
            <VBox spacing="10.0" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Comments" />
                  
                  <!-- Comments List -->
                  <ListView fx:id="commentsList" prefHeight="200.0" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </ListView>

                  <!-- Add Comment -->
                  <Separator />
                  <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Add Comment" />
                  
                  <TextArea fx:id="commentInput" prefHeight="80.0" promptText="Write a comment..." wrapText="true" />
                  <Button fx:id="addCommentBtn" mnemonicParsing="false" onAction="#onAddComment" style="-fx-padding: 8;" text="Post Comment" />
               </children>
            </VBox>
         </VBox>
      </SplitPane>
   </center>
</BorderPane>
