<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="main-container" stylesheets="@style.css, @friends.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.opal.controller.FriendListController">
   <children>
      <VBox fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label styleClass="title-large" text="Friends &amp; Connections" />
               </children>
            </HBox>
            
            <!-- Friends Section -->
            <VBox spacing="10.0" styleClass="section-container">
               <children>
                  <Label fx:id="friendsCountLabel" styleClass="section-title" text="Friends (0)" />
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="150.0" styleClass="transparent-scroll-pane">
                     <content>
                        <VBox fx:id="friendsContainer" spacing="5.0" styleClass="transparent-container">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            
            <!-- Following Section -->
            <VBox spacing="10.0" styleClass="section-container">
               <children>
                  <Label fx:id="followersCountLabel" styleClass="section-title" text="Following (0)" />
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="150.0" styleClass="transparent-scroll-pane">
                     <content>
                        <VBox fx:id="followersContainer" spacing="5.0" styleClass="transparent-container">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            
            <!-- Pending Requests Section -->
            <VBox spacing="10.0" styleClass="section-container">
               <children>
                  <Label fx:id="pendingCountLabel" styleClass="section-title" text="Pending Requests (0)" />
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="150.0" styleClass="transparent-scroll-pane">
                     <content>
                        <VBox fx:id="pendingRequestsContainer" spacing="5.0" styleClass="transparent-container">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
