<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="main-container" stylesheets="@style.css, @friends.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.opal.controller.FriendSearchController">
   <children>
      <VBox fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <!-- Header -->
            <Label styleClass="title-large" text="Find Friends" />
            
            <!-- Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <TextField fx:id="searchField" promptText="Search users..." styleClass="text-field" HBox.hgrow="ALWAYS" />
                  <Button fx:id="searchButton" onAction="#handleSearch" prefHeight="42.0" prefWidth="82.0" styleClass="button, primary-button" text="Search" />
               </children>
            </HBox>
            
            <!-- Search Results -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label styleClass="section-title" text="Search Results" />
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="transparent-scroll-pane" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="searchResultsContainer" spacing="10.0" styleClass="transparent-container">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
