         <children>
            <Label style="-fx-font-size: 32; -fx-font-weight: bold;" text="Welcome" />
            <Label fx:id="welcomeLabel" style="-fx-text-fill: #666666; -fx-font-size: 16;" text="You are successfully logged in to Opal." textAlignment="CENTER" wrapText="true" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </children>
</AnchorPane>
