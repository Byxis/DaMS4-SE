               <children>
                  <Button fx:id="userProfileBtn" mnemonicParsing="false" style="-fx-background-color: #2D2D2D; -fx-text-fill: white; -fx-background-radius: 50; -fx-min-width: 45; -fx-min-height: 45; -fx-font-size: 18;" text="ðŸ‘¤" />
