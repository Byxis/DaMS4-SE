                     </children>
                  </VBox>
               </children>
            </HBox>

            <HBox HBox.hgrow="ALWAYS" />

            <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logout" style="-fx-background-color: transparent; -fx-text-fill: #2D2D2D; -fx-font-size: 20; -fx-cursor: hand;" text="Logout ðŸšª" />
