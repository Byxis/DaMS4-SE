<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" styleClass="main-container" stylesheets="@style.css, @home.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.opal.controller.HomeController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="800.0" styleClass="header-bar">
         <children>
            <HBox alignment="CENTER_LEFT" onMouseClicked="#openProfileDialog" spacing="15.0" style="-fx-cursor: hand;">
               <children>
                  <Button fx:id="userProfileBtn" mnemonicParsing="false" styleClass="profile-button" text="ðŸ‘¤" />
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label fx:id="usernameLabel" styleClass="title-label" text="Username" />
                        <Label styleClass="muted-label" text="View Profile" />
                     </children>
                  </VBox>
               </children>
            </HBox>

            <HBox HBox.hgrow="ALWAYS" />

            <Button fx:id="settingsBtn" mnemonicParsing="false" onAction="#openSettings" styleClass="navbar-button" text="âš™" />
            <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logout" styleClass="navbar-button" text="ðŸšª" />
         </children>
      </HBox>

      <VBox layoutY="80.0" prefHeight="520.0" prefWidth="800.0" spacing="20.0" style="-fx-padding: 20;">
         <children>
            <Label styleClass="title-large" text="Welcome" />
            <Label fx:id="welcomeLabel" styleClass="subtitle-label" text="You are successfully logged in to Opal." textAlignment="CENTER" wrapText="true" />
            
            <!-- Friends Section -->
            <VBox spacing="10.0" style="-fx-padding: 20 0 0 0;">
               <children>
                  <Label styleClass="section-title" text="Friends &amp; Connections" />
                  <HBox spacing="10.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#openFriendsList" styleClass="button, primary-button" text="View Friends" />
                        <Button mnemonicParsing="false" onAction="#openFriendSearch" styleClass="button, secondary-button" text="Find Friends" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </children>
</AnchorPane>
