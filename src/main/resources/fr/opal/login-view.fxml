<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css, @auth.css" styleClass="main-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.opal.controller.AuthController">
   <children>
      <VBox alignment="CENTER" layoutX="186.0" layoutY="58.0" prefHeight="283.0" prefWidth="228.0" spacing="10">
         <children>
            <Label styleClass="title-large" text="Login"/>
            <Hyperlink onAction="#goToRegister" prefHeight="24.0" prefWidth="150.0" text="Create an account" textAlignment="CENTER">
               <graphic>
                  <Label text="New ?" />
               </graphic>
            </Hyperlink>
            <VBox prefWidth="228.0" spacing="5">
               <children>
                  <Label alignment="TOP_LEFT" text="Username *" />
                  <TextField fx:id="usernameField" prefHeight="34.0" prefWidth="228.0" promptText="Username" />
               </children>
            </VBox>
            <VBox prefWidth="228.0" spacing="5">
               <children>
                  <Label alignment="TOP_LEFT" text="Password *" />
                  <PasswordField fx:id="passwordField" prefHeight="33.0" prefWidth="228.0" promptText="Password" />
               </children>
            </VBox>
            <Label fx:id="messageLabel" text="" wrapText="true" />
            <Button mnemonicParsing="false" onAction="#submitLogin" prefHeight="40.0" prefWidth="228.0" styleClass="primary-button" text="Login" />
         </children>
      </VBox>
   </children>
</AnchorPane>
