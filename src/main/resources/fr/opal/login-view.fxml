<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.StackPane?>
<StackPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css, @auth.css" styleClass="main-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.opal.controller.AuthController">
   <children>
      <VBox alignment="CENTER" maxWidth="350.0" prefWidth="350.0" spacing="20">
         <children>
            <Label styleClass="title-large" text="Login"/>
            <Hyperlink onAction="#goToRegister" text="Create an account" textAlignment="CENTER">
               <graphic>
                  <Label text="New ?" />
               </graphic>
            </Hyperlink>
            <VBox spacing="5" alignment="CENTER_LEFT">
               <children>
                  <Label text="Username *" />
                  <TextField fx:id="usernameField" prefHeight="40.0" promptText="Username" />
               </children>
            </VBox>
            <VBox spacing="5" alignment="CENTER_LEFT">
               <children>
                  <Label text="Password *" />
                  <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Password" />
               </children>
            </VBox>
            <Label fx:id="messageLabel" text="" wrapText="true" />
            <Button mnemonicParsing="false" onAction="#submitLogin" prefHeight="45.0" maxWidth="Infinity" styleClass="primary-button" text="Login" />
         </children>
      </VBox>
   </children>
</StackPane>
