<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.opal.controller.AuthController">
   <children>
      <VBox alignment="CENTER" layoutX="186.0" layoutY="30.0" prefWidth="228.0" style="-fx-spacing: 10;">
         <children>
            <Label style="-fx-font-size: 32; -fx-font-weight: bold;" text="Register" />

            <Hyperlink onAction="#switchToLogin" prefHeight="24.0" prefWidth="186.0" style="-fx-text-fill: black; -fx-underline: true;" text="Sign in to your account">
               <graphic>
                  <Label text="Already?" />
               </graphic>
            </Hyperlink>

            <VBox prefWidth="228.0">
               <children>
                  <Label text="Username *" />
                  <TextField fx:id="usernameField" prefHeight="34.0" promptText="Username" />
               </children>
            </VBox>

            <VBox prefWidth="228.0">
               <children>
                  <Label text="Password *" />
                  <PasswordField fx:id="passwordField" prefHeight="34.0" promptText="Password" />
               </children>
            </VBox>

            <VBox prefWidth="228.0">
               <children>
                  <Label text="Confirm Password *" />
                  <PasswordField fx:id="confirmPasswordField" prefHeight="34.0" promptText="Confirm password" />
               </children>
            </VBox>

            <Label fx:id="messageLabel" text="" wrapText="true" />

            <Button mnemonicParsing="false" onAction="#register" prefHeight="40.0" prefWidth="228.0" text="Create Account" />
         </children>
      </VBox>
   </children>
</AnchorPane>
